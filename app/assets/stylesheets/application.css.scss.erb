@import "bootstrap";
@import "bootstrap-responsive";


$grayMediumLight: #eaeaea;

@mixin box_sizing {
  -moz-box-sizing: border-box; 
  -webkit-box-sizing: border-box; 
  box-sizing: border-box;
}


body {
  background-color: #010135;
}

.navbar .brand, .navbar .nav li a {
 color: white;
 text-shadow: 0 0 0 white;
}

.row-fluid .span2.sidebar {
 margin-left: 2%;
}

.inner {
  padding-left: 2%;
}

.span8.inner h3 {
  margin-left: 2%;
}

.navbar-inner {
 background-image: url(<%= asset_path 'top_bar.png' %>);
}

.content {
 background: url(<%= asset_path 'content-inner-background.png' %>) top left repeat-y;
}

table {
  background-color: white;
}

textarea {
  width: 100%;
}

.content {
  margin-top: 42px;
}

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}


.row-fluid.content {
  padding-bottom: 100px;
}

h1, h2, h3 {
text-shadow: 1px 1px 0px white;
}

a.btn:visited {
 color: white;
}

footer {
 color: white;
}


@import "pages";
@import "jquery-ui-timepicker-addon";
